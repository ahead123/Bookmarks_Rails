<div class="page-header">
	<h2 class="text-info text-center" style="font-size: 3.8em;">Sign up for Booky</h2>	
	<h3 class="text-muted text-center">Start creating customized bookmark lists instantly!</h3>
</div>

<div class="row">
  	<div class="col-xs-5 col-xs-offset-3 col-md-4 col-md-offset-4">
<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <%= f.text_field :username, autofocus: true %>
  <%= f.email_field :email, autofocus: true %>

  <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>

    <%= f.password_field :password_confirmation, autocomplete: "off" %>

	<%= f.button "Sign up", class: "btn btn-primary" %>
	</div>
</div>
<% end %>
<div class="row">
	<div class="col-md-5 col-md-offset-4">
		<br />
		<%= render "devise/shared/links" %>
	</div>
</div>

