
<div class="page-header text-center">
	<h1 class="text-info" style="font-size: 3.8em;">Forgot your Booky password?</h1>
	<h3 class="text-muted">Guess that's one of those things you just can't bookmark</h3>
</div>

<div class="row">
	<div class= "col-xs-6 col-xs-offset-2 col-md-3 col-md-offset-4">
<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.email_field :email, autofocus: true %>

  <%= f.submit "Reset password", class: "btn btn-primary" %><br />
<% end %>
 <br />
<%= render "devise/shared/links" %>
	</div>
</div>