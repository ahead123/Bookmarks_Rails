<% if user_signed_in? %>
<div class="page-header brand">
<p class="pull-right text-alert"><%= link_to 'Logout', destroy_user_session_path, :method => :delete, data: { confirm: 'Leaving already?'} %></p>
  <h1 class="text-info">Listing bookmarks</h1>
  <p class="pull-right text-alert">Logged in as <%= current_user.email %></p> <br />
</div>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      
<table class="table  table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Content</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.title %></td>
        <td><%= bookmark.url %></td>
        <td><%= bookmark.content %></td>
        <td><%= link_to 'Show', bookmark %></td>
        <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
        <td><%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Bookmark', new_bookmark_path %>
<%= link_to 'Users', users_path %>
<% else %>
<% redirect_to new_user_session_path %>
<% end %>
    </div>
  </div>



